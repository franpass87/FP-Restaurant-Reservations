{
  "name": "fp-restaurant-reservations",
  "private": true,
  "version": "0.1.10",
  "type": "module",
  "description": "Build tooling placeholder for FP Restaurant Reservations.",
  "scripts": {
    "lint:php": "phpcs",
    "lint:phpstan": "phpstan analyse",
    "lint:js": "eslint \"assets/js/**/*.{js,ts}\"",
    "format:check": "prettier --check \"**/*.{js,ts,json,md}\"",
    "build": "vite build",
    "build:optimized": "node assets/js/build-optimized.js",
    "build:all": "npm run build && npm run build:optimized",
    "dev": "vite",
    "test": "npm run test:phpunit",
    "test:phpunit": "./vendor/bin/phpunit -c tests/phpunit.xml",
    "test:e2e": "playwright test --config tests/E2E/playwright.config.ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "eslint": "^9.36.0",
    "globals": "^16.4.0",
    "vite": "^7.1.9"
  }
}
