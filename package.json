{
  "name": "fp-restaurant-reservations",
  "private": true,
  "version": "0.1.0",
  "description": "Build tooling placeholder for FP Restaurant Reservations.",
  "scripts": {
    "lint:php": "phpcs",
    "lint:phpstan": "phpstan analyse",
    "lint:js": "eslint \"assets/js/**/*.{js,ts}\"",
    "format:check": "prettier --check \"**/*.{js,ts,json,md}\"",
    "build": "vite build",
    "dev": "vite",
    "test": "npm run test:phpunit",
    "test:phpunit": "phpunit -c tests/phpunit.xml",
    "test:e2e": "playwright test --config tests/E2E/playwright.config.ts"
  },
  "devDependencies": {
    "vite": "^5.2.0"
  }
}
